<section class="bh2e-character-weapons">
	<h3>Weapons</h3>
	<div class="bh2e-grid bh2e-grid-4-col">
	    <div>{{localize "bh2e.fields.labels.weapon"}}</div>
	    <div>{{localize "bh2e.fields.labels.weaponKind"}}</div>
	    <div>{{localize "bh2e.fields.labels.attribute"}}</div>
	    <div></div>
	</div>

	<hr>

	<div class="bh2e-grid bh2e-grid-4-col">
    {{#each weapons as |weapon id|}}
	    <div>{{weapon.name}}</div>
	    <div>
	    {{#if (eq weapon.data.kind "melee")}}
	        {{localize "bh2e.weapons.kinds.melee"}}
	    {{/if}}
	    {{#if (eq weapon.data.kind "ranged")}}
	        {{localize "bh2e.weapons.kinds.ranged"}}
	    {{/if}}
	    {{#if (eq weapon.data.kind "unarmed")}}
	        {{localize "bh2e.weapons.kinds.unarmed"}}
	    {{/if}}
	    </div>
	    <div>
	    {{#if (eq weapon.data.attribute "strength")}}
	        {{localize "bh2e.fields.labels.attributes.strength.long"}}
	    {{/if}}

	    {{#if (eq weapon.data.attribute "dexterity")}}
	        {{localize "bh2e.fields.labels.attributes.dexterity.long"}}
	    {{/if}}

	    {{#if (eq weapon.data.attribute "constitution")}}
	        {{localize "bh2e.fields.labels.attributes.constitution.long"}}
	    {{/if}}

	    {{#if (eq weapon.data.attribute "intelligence")}}
	        {{localize "bh2e.fields.labels.attributes.intelligence.long"}}
	    {{/if}}

	    {{#if (eq weapon.data.attribute "wisdom")}}
	        {{localize "bh2e.fields.labels.attributes.wisdom.long"}}
	    {{/if}}

	    {{#if (eq weapon.data.attribute "charisma")}}
	        {{localize "bh2e.fields.labels.attributes.charisma.long"}}
	    {{/if}}
	    </div>
	    <div></div>
	{{/each}}
	</div>
</section>
